{
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "5.3",
    "manifest_version": 3,
    "default_locale": "en",
    "developer": {
        "name": "dizzi1222",
        "url": "https://github.com/dizzi1222/Librezam"
    },
    "icons": {
        "38": "images/icon-38.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_title": "__MSG_extensionName__",
        "default_popup": "/popup/guess.html"
    },
    "content_scripts": [
        {
          "js": ["content/appendWorkaround.js", "content/content.js", "content/autoGuess.js"],
          "matches": ["<all_urls>"],
          "all_frames": true
        }
    ],
    "background":{
        "scripts":["background/background.js"],
        "type": "module"
    },
    "permissions": ["tabs", "webNavigation", "storage", "notifications", "unlimitedStorage"],
    "host_permissions": ["<all_urls>"],
    "web_accessible_resources": [{
        "resources": ["/content/*.js","/storageHelper/*.js"],
        "matches": ["<all_urls>"]
    }],
    "commands": {
        "tab-recognize": {
            "suggested_key": {
                "default": "Ctrl+E"
            },
            "description": "__MSG_recognizeFromTabAudio__"
        },
        "mic-recognize": {
            "suggested_key": {
                "default": "Ctrl+Alt+E"
            },
            "description": "__MSG_recognizeFromMicrophoneCommand__"
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "Librezam-blue@dizzi1222",
            "update_url": "https://raw.githubusercontent.com/dizzi1222/Librezam/main/updates.json",
            "data_collection_permissions": {
                "required": ["none"]
            }
        }
    }
}
