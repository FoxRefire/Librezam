{
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "5.6",
    "manifest_version": 3,
    "default_locale": "en",
    "icons": {
        "128": "images/icon.png"
    },
    "action": {
        "default_title": "__MSG_extensionName__",
        "default_popup": "/popup/guess.html"
    },
    "content_scripts": [
        {
          "js": ["content/appendWorkaround.js", "content/content.js", "content/autoGuess.js"],
          "matches": ["<all_urls>"],
          "all_frames": true
        }
    ],
    "background":{
        "service_worker":"background/background.js",
        "type": "module"
    },
    "permissions": ["tabCapture", "webNavigation", "storage", "notifications", "offscreen", "unlimitedStorage"],
    "host_permissions": ["<all_urls>"],
    "web_accessible_resources": [{
        "resources": ["/content/*.js", "/storageHelper/*.js"],
        "matches": ["<all_urls>"]
    }],
    "commands": {
        "tab-recognize": {
            "suggested_key": {
                "default": "Ctrl+E"
            },
            "description": "__MSG_recognizeFromTabAudio__"
        },
        "mic-recognize": {
            "suggested_key": {
                "default": "Ctrl+E"
            },
            "description": "__MSG_recognizeFromMicrophoneCommand__"
        }
    }
}
