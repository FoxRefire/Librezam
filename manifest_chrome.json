{
    "name": "Librezam",
    "description": "Opensource song recognition extension using shazam API",
    "version": "3.4",
    "manifest_version": 3,
    "icons": {
        "128": "images/icon.png"
    },
    "action": {
        "default_title": "Librezam",
        "default_popup": "/popup/guess.html"
    },
    "content_scripts": [
        {
          "js": ["content/content.js"],
          "matches": ["<all_urls>"],
          "all_frames": true
        }
    ],
    "background":{
        "service_worker":"background/background.js",
        "type": "module"
    },
    "permissions": ["tabs", "webNavigation", "storage", "notifications", "offscreen"],
    "host_permissions": ["<all_urls>"],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "web_accessible_resources": [{
        "resources": ["/content/workaround.js"],
        "matches": ["<all_urls>"]
    }]
}
