{
    "name": "Librezam",
    "description": "Opensource song recognition extension using shazam API",
    "version": "5.1",
    "manifest_version": 3,
    "icons": {
        "128": "images/icon.png"
    },
    "action": {
        "default_title": "Librezam",
        "default_popup": "/popup/guess.html"
    },
    "content_scripts": [
        {
          "js": ["content/appendWorkaround.js", "content/content.js", "content/autoGuess.js"],
          "matches": ["<all_urls>"],
          "all_frames": true
        }
    ],
    "background":{
        "service_worker":"background/background.js",
        "type": "module"
    },
    "permissions": ["tabs", "webNavigation", "storage", "notifications", "offscreen", "unlimitedStorage"],
    "host_permissions": ["<all_urls>"],
    "web_accessible_resources": [{
        "resources": ["/content/*.js", "/storageHelper/*.js"],
        "matches": ["<all_urls>"]
    }],
    "commands": {
        "tab-recognize": {
            "suggested_key": {
                "default": "Ctrl+E"
            },
            "description": "Recognize from tab audio"
        },
        "mic-recognize": {
            "suggested_key": {
                "default": "Ctrl+Alt+E"
            },
            "description": "Recognize from microphone"
        }
    }
}
